# 🔧 Environment Variables Template for Medallion ETL Project
# Copy this file to .env and fill in your actual values

# 🗄️ Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/medallion_etl
POSTGRES_DB=medallion_etl
POSTGRES_USER=medallion_user
POSTGRES_PASSWORD=your_secure_password

# 🔐 Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key

# 🌐 CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80,https://your-domain.com

# 🚀 Application Settings
FLASK_ENV=production
DEBUG=False
PORT=5000

# 📊 Power BI Configuration (Optional)
POWERBI_CLIENT_ID=your-powerbi-client-id
POWERBI_CLIENT_SECRET=your-powerbi-client-secret
POWERBI_TENANT_ID=your-powerbi-tenant-id
POWERBI_WORKSPACE_ID=your-powerbi-workspace-id

# 📈 Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# 🐳 Docker Configuration
COMPOSE_PROJECT_NAME=medallion-etl
